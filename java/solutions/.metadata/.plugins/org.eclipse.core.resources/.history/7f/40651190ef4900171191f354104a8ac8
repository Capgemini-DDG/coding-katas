package com.df.Program;

public class Roman_Numerals_Calc 
{
	public String Calc (String in1, String in2)
	{	
		int total1 = 0;
		int total2 = 0;
		boolean nxtBreak = false;
		
		for (int i = 0; i < in1.length(); i++)
		{
			if (!nxtBreak)
			{
				switch (in1.substring(i, i+1))
				{
					case "I":
						if (in1.substring(i, i+2).equals("IV"))
						{
							total1 += 4;
							nxtBreak = true;
						}
						else if (in1.substring(i, i+2).equals("IX"))
						{
							total1 += 9;
							nxtBreak = true;
						}
						else					
							total1 += 1;
						break;
					case "V":
						total1 += 5;
						break;
					case "X":
						if (in1.substring(i, i+2).equals("XL"))
						{
							total1 += 40;
							nxtBreak = true;
						}
						else if (in1.substring(i, i+2).equals("XC"))
						{
							total1 += 90;
							nxtBreak = true;
						}
						else
							total1 += 10;
						break;
					case "L":
						total1 += 50;
						break;
					case "C":
						total1 += 100;
						break;
					default:
						System.err.println("Error: Not a Roman Numeral");
				}
			}
			nxtBreak = false;
		}
		
		nxtBreak = false;
		
		for (int i = 0; i < in2.length(); i++)
		{
			if (!nxtBreak)
			{
				switch (in2.substring(i, i+1))
				{
					case "I":
						if (in2.substring(i, i+2).equals("IV"))
						{
							total2 += 4;
							nxtBreak = true;
						}
						else if (in2.substring(i, i+2).equals("IX"))
						{
							total2 += 9;
							nxtBreak = true;
						}
						else					
							total2 += 1;
						break;
					case "V":
						total2 += 5;
						break;
					case "X":
						if (in1.substring(i, i+2).equals("XL"))
						{
							total2 += 40;
							nxtBreak = true;
						}
						else if (in2.substring(i, i+2).equals("XC"))
						{
							total2 += 90;
							nxtBreak = true;
						}
						else
							total2 += 10;
						break;
					case "L":
						total2 += 50;
						break;
					case "C":
						total2 += 100;
						break;
					default:
						System.err.println("Error: Not a Roman Numeral");
				}
			}
			nxtBreak = false;
		}
		
		int overall = total1 + total2;
		
		String output = "";
		
		while (overall > 0)
		{
			if (overall >= 100)
			{
				output = output+"C";
				overall = overall - 100;
			}
			else if (overall >= 90)
			{
				output = output+"XC";
				overall = overall - 90;
			}
			else if (overall >= 50)
			{
				output = output+"L";
				overall = overall - 50;
			}
			else if (overall >= 40)
			{
				output = output+"XL";
				overall = overall - 40;
			}
			else if (overall >= 10)
			{
				output = output+"X";
				overall = overall - 10;
			}
			else if (overall >= 9)
			{
				output = output+"IX";
				overall = overall - 90;
			}
			else if (overall >= 5)
			{
				output = output+"V";
				overall = overall - 90;
			}
			else if (overall >= 4)
			{
				output = output+"IV";
				overall = overall - 90;
			}
			else if (overall >= 1)
			{
				output = output+"I";
				overall = overall - 1;
			}
		}
	}
}
